<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        android:background="@drawable/menu_background"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_height="match_parent"
        android:layout_width="fill_parent"
        android:orientation="vertical" android:id="@+id/h"
        >

    <TextView
            android:text="@string/app_name"
            android:textColor="@android:color/holo_orange_dark"
            android:textStyle="bold"
            android:textSize="@android:dimen/app_icon_size"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textColorHighlight="#ffffa200"
            android:textAlignment="center"
            android:layout_margin="10dp"
            android:gravity="center" style="@android:style/DeviceDefault.ButtonBar"/>

    <Button
            android:id="@+id/playButton"
            android:text="@string/playMenu"
            android:textSize="30dp"
            android:layout_height="wrap_content"
            android:layout_width="fill_parent"
            android:layout_marginTop="30dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="10dp"
            android:layout_row="1"
            android:textStyle="bold"
            android:background="@android:color/transparent"/>

    <Button
            android:id="@+id/statisticsButton"
            android:text="@string/statisticsMenu"
            android:textSize="30dp"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_margin="20dp"
            android:textStyle="bold"
            android:layout_row="1"
            android:background="@android:color/transparent"/>

    <Button
            android:id="@+id/settingsButton"
            android:text="@string/settingsMenu"
            android:textSize="30dp"
            android:layout_height="wrap_content"
            android:layout_width="fill_parent"
            android:layout_margin="20dp"
            android:textStyle="bold"
            android:layout_row="1"
            android:background="@android:color/transparent"/>

    <Button
            android:id="@+id/aboutButton"
            android:text="@string/aboutMenu"
            android:textSize="30dp"
            android:layout_height="wrap_content"
            android:layout_width="fill_parent"
            android:layout_margin="20dp"
            android:textStyle="bold"
            android:layout_row="1"
            android:background="@android:color/transparent"/>

</LinearLayout>
